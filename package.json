{
  "name": "portfolio-website-astrojs",
  "description": "This is my portfolio website, based on Unicorn Sparkle template from UXCorpRangel.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro check && astro build",
    "dev": "astro dev",
    "prepare": "is-ci || husky install",
    "preview": "astro preview",
    "start": "astro dev",
    "deploy": "npm install --omit=dev --ignore-scripts",
    "check-types": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^9.4.4", 
    "@astrolicious/i18n": "^0.6.2",
    "@fontsource-variable/montserrat": "^5.2.8",
    "@inox-tools/aik-route-config": "^0.7.5",
    "@playform/compress": "^0.2.0",
    "astro": "^5.13.10",
    "astro-compressor": "^1.1.2",
    "astro-icon": "^1.1.5",
    "astro-integration-kit": "~0.17.0",
    "astro-seo-schema": "^5.1.0",
    "astro-sitemap": "^1.0.0",
    "astro-tunnel": "^0.1.8",
    "i18next": "^23.0.0",
    "sanitize.css": "^13.0.0",
    "schema-dts": "^1.1.5",
    "sharp": "^0.34.4",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "lint-staged": {
    "./**/*.{js,mjs,cjs,ts,astro}": [
      "biome check --fix"
    ],
    "./src/**/*.css": "prettier --cache --write \"./src/**/*.css\"",
    "./**/*.json": "prettier --cache --write \"./**/*.json\"",
    "./**/*.yml": "prettier --cache --write \"./**/*.yml\""
  }
}
