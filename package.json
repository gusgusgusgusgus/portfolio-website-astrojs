{
  "name": "portfolio-website-astrojs",
  "description": "This is my portfolio website, based on Unicorn Sparkle template from UXCorpRangel.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro check && astro build",
    "dev": "astro dev",
    "prepare": "husky",
    "preview": "astro preview",
    "start": "astro dev",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/vercel": "^8.2.8",
    "@astrolicious/i18n": "^0.6.2",
    "@fontsource-variable/montserrat": "^5.2.8",
    "@inox-tools/aik-route-config": "^0.8.2",
    "@playform/compress": "^0.1.9",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "astro": "^5.13.10",
    "astro-compressor": "^1.1.2",
    "astro-icon": "^1.1.5",
    "astro-integration-kit": "^0.18.0",
    "astro-seo-schema": "^5.1.0",
    "astro-sitemap": "^1.0.0",
    "astro-tunnel": "^0.1.8",
    "i18next": "^24.2.3",
    "sanitize.css": "^13.0.0",
    "schema-dts": "^1.1.5",
    "sharp": "^0.34.4",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^8.57.1",
    "eslint-config-love": "^47.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "lint-staged": {
    "./**/*.{js,mjs,cjs}": [
      "eslint --cache --fix --ext .js,.mjs,.cjs ./",
      "prettier --cache --write \"./**/*.{js,mjs,cjs}\""
    ],
    "./**/*.ts": [
      "eslint --cache --fix --ext .ts ./",
      "prettier --cache --write \"./**/*.ts\""
    ],
    "./src/**/*.astro": [
      "eslint --cache --fix --ext .astro ./src/",
      "prettier --cache --write \"./src/**/*.astro\""
    ],
    "./src/**/*.css": "prettier --cache --write \"./src/**/*.css\"",
    "./**/*.json": "prettier --cache --write \"./**/*.json\"",
    "./**/*.yml": "prettier --cache --write \"./**/*.yml\""
  }
}
